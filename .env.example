###############################################
# BlockPanel Environment Template (.env)      #
###############################################

# Core App Metadata
APP_NAME=BlockPanel
# Pin the deployed app semantic version (match image tag). Update on upgrade.
APP_VERSION=v0.0.3

# Image Configuration (set BLOCKPANEL_TAG to a specific release for stability)
BLOCKPANEL_IMAGE=blockypanel/blockpanel
BLOCKPANEL_RUNTIME_IMAGE=blockypanel/blockpanel-runtime
BLOCKPANEL_TAG=latest

# Networking / Localization
HOST_PORT=8000
TIMEZONE=UTC

# Runtime Optimization Toggles
# Set to true to skip prewarm container (remove dependency in compose accordingly)
DISABLE_RUNTIME_PREWARM=false

# Database Configuration
USE_POSTGRES=true
DATABASE_URL=postgresql://postgres:postgres123@db:5432/minecraft_controller
# For SQLite instead: DATABASE_URL=sqlite:///./minecraft_controller.db

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
SERVERS_CONTAINER_ROOT=/data/servers
SERVERS_VOLUME_NAME=minecraft-controller_mc_servers_data

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Error Fixer Configuration
AI_AUTO_STARTUP=true
AI_MONITOR_INTERVAL=30

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production

# PostgreSQL Database Settings (when USE_POSTGRES=true)
POSTGRES_DB=minecraft_controller
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional: External Services
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_FROM=admin@yourserver.com
# EMAIL_PASSWORD=your-app-password

# Optional CI / Test Flags (used by test harness)
# SKIP_FRONTEND_CHECK=true
# SKIP_DOCKER_CHECK=true
# OPTIONAL_FAIL_OK=true
# CI_ALLOW_PARTIAL=true

# Windows Host Docker Socket Note:
# For Windows + Docker Desktop you may need: DOCKER_HOST=npipe:////./pipe/docker_engine

